<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>poc</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Start Ride Form</h1>
        <form action="/startTrip" method="post" class="form" id="form">
            <div class="mb-3">
                <button type="button" class="btn btn-primary" id="start-camera">Start Camera</button>
            </div>
            <div class="mb-3">
                <video id="video" class="w-100" autoplay></video>
            </div>
            <div class="mb-3">
                <button type="button" class="btn btn-primary" id="click-photo">Click Photo</button>
            </div>
            <div class="mb-3">
                <canvas id="canvas" class="w-100"></canvas>
            </div>
            <div class="mb-3">
                <label for="start" class="form-label">Current km reading in odometer</label>
                <input type="text" class="form-control" id="start" name="odometerReading">
            </div>
            <div class="mb-3">
                <label for="otp" class="form-label">Enter OTP:</label>
                <input type="text" class="form-control" id="otp" name="otp" value="8080" required>
                <input type="text" class="form-control" id="id" name="id" hidden>
                <input type="text" class="form-control" id="imageRef" name="imageRef" hidden>
            </div>
            <div class="mb-3">
                <button type="button" class="btn btn-primary" onclick="updateAndSubmit()">Submit</button>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Your JavaScript Code -->
    
<script>
let camera_button = document.querySelector("#start-camera");
let video = document.querySelector("#video");
let click_button = document.querySelector("#click-photo");
let canvas = document.querySelector("#canvas");
let startInput = document.querySelector("#start"); 
let image_data_url ="";

camera_button.addEventListener('click', async function() {
    let stream = await navigator.mediaDevices.getUserMedia({ video: { facingMode: 'environment' }, audio: false });
    video.srcObject = stream;
});

click_button.addEventListener('click', function() {
    canvas.getContext('2d').drawImage(video, 0, 0, canvas.width, canvas.height);
    image_data_url = canvas.toDataURL('image/jpeg');
    // Hide the video element after clicking a photo
    video.style.display = "none";
    camera_button.style.display = "none";
    click_button.style.display = "none";

    // data url of the image
    console.log(image_data_url);
});

var hiddenId = document.getElementById("id");
var hiddenInput = document.getElementById("imageRef");
var id = localStorage.getItem("id");

// Function to update and submit the form
function updateAndSubmit() {
    // Update the value of the hidden input field
    hiddenInput.value = image_data_url;
    hiddenId.value = id;
    // Submit the form
    var form = document.getElementById("form");
    form.submit();
}


    </script>
</body>
</html>

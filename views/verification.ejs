<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>poc</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body >
    <div class="container " style="padding-left: 0%;padding-right: 0%;">
    <nav class="navbar navbar-inverse">
        <div class="container-fluid" style=" background-color: rgb(255, 166, 0); margin-top: 0%;">
          <div class="navbar-header">
        
            <a class="navbar-brand" style="color: black;" href="#">Taxi go</a>
          </div>

        </div>
      </nav>
    </div>  
    <div class="container mt-5" >
     <form id="form" action="/customer" method="post">
        <div class="mb-3">
            <label for="start" class="form-label" style="font-size: medium;">Enter Your Name:</label>
            <input type="text" class="form-control" id="driverName" name="driverName">
        </div>
        <div class="mb-3">
            <label for="otp" class="form-label" style="font-size: medium;">Enter Your Phone No:</label>
            <input type="text" class="form-control" id="Dphone" name="Dphone" required>
            <input type="text" class="form-control" id="Id" value="" name="Id" hidden>
        </div>

        <div class="mb-3">
            <button type="button" class="btn btn-primary" style="background-color: black;" onclick="updateAndSubmit()" >Submit</button>
        </div>
     </form>
    </div>
  <script>
          var id = "<%=id%>";
        
    localStorage.setItem("id", id);
     var Id = document.getElementById("Id");
     var verified = <%= verified %>
    //  var id = localStorage.getItem("id");
     console.log(id,verified);

// Function to update and submit the form
function updateAndSubmit() {
    // Update the value of the hidden input field  
    Id.value = id;
    // Submit the form
    var form = document.getElementById("form");
    form.submit();
}
    if(verified == false){
        window.alert("Phone number not matched. Please try again!")
    }

  </script>  
</body>
</html>